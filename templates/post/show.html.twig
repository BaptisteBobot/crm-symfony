{% extends 'base.html.twig' %}

{% block title %}Détails du Post{% endblock %}

{% block content %}
    <div class="container">
        <h1>Détails du Post</h1>

        <div class="card mb-4">
            <div class="card-body">
                <p class="card-text">{{ post.content }}</p>
            </div>
        </div>

        <h4>Commentaires :</h4>
        {% for comment in post.comments %}
            <div class="card mb-3">
                <div class="card-body">
                    <p class="card-text">{{ comment.content }}</p>
                    {% if app.user and (is_granted('ROLE_ADMIN') or comment.createdBy == app.user) %}
                        <a href="{{ path('comment_edit', { 'id': comment.id }) }}" class="btn btn-primary">Modifier</a>
                        <form action="{{ path('comment_delete', { 'id': comment.id }) }}" method="post" class="d-inline">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <p>Aucun commentaire.</p>
        {% endfor %}

        <a href="{{ path('post_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{% endblock %}
