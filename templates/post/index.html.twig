{% extends 'base.html.twig' %}

{% block title %}Liste des Posts{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des Posts</h1>

    <a href="{{ path('post_new') }}" class="btn btn-primary mb-3">Créer un nouveau Post</a>

    <div class="row">
        {% for post in posts %}
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    {# <h5 class="card-title">{{ post.title }}</h5> #}
                    <p class="card-text">{{ post.content }}</p>
                    <a href="{{ path('post_show', { 'id': post.id }) }}" class="btn btn-primary">Voir plus</a>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-md-12">
            <p>Aucun post n'a été trouvé.</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
