{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .game {
            width: 300px;
            height: 300px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .game:hover {
            transform: scale(1.1);
        }

        .game.modal-open {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .game.modal-open .modal-dialog {
            margin: 0;
            width: auto;
            max-width: 90%;
            height: auto;
            max-height: 90%;
        }

        .game iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
{% endblock %}

{% block content %}
<div class="container">
    <h1>Jeux</h1>

    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="game" data-bs-toggle="modal" data-bs-target="#chessModal">
                    <iframe src="https://playpager.com/embed/chess/index.html" scrolling="no"></iframe>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#chessModal">Jouer à Chess</button>
            </div>
            <div class="col-6">
                <div class="game" data-bs-toggle="modal" data-bs-target="#reversiModal">
                    <iframe src="https://playpager.com/embed/reversi/index.html" scrolling="no"></iframe>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reversiModal">Jouer à Reversi</button>
            </div>
            <div class="col-6">
                <div class="game" data-bs-toggle="modal" data-bs-target="#checkersModal">
                    <iframe src="https://playpager.com/embed/checkers/index.html" scrolling="no"></iframe>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#checkersModal">Jouer à Checkers</button>
            </div>
            <div class="col-6">
                <div class="game" data-bs-toggle="modal" data-bs-target="#monopolyModal">
                    <iframe src="https://www.gameslol.net/monopoly-1122.html" scrolling="no"></iframe>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#monopolyModal">Jouer à Monopoly</button>
            </div>
        </div>
    </div>

   <!-- Modals -->
<div class="modal fade" id="chessModal" tabindex="-1" aria-labelledby="chessModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 800px; width: 100%; max-height: 800px; height: 100%;">
        <div class="modal-content" style="height: 100%;">
            <div class="modal-body" style="height: 100%;">
                <iframe src="https://playpager.com/embed/chess/index.html" scrolling="no" style="width: 100%; height: 100%; border: none;"></iframe>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="reversiModal" tabindex="-1" aria-labelledby="reversiModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 800px; width: 100%; max-height: 800px; height: 100%;">
        <div class="modal-content" style="height: 100%;">
            <div class="modal-body" style="height: 100%;">
                <iframe src="https://playpager.com/embed/reversi/index.html" scrolling="no" style="width: 100%; height: 100%; border: none;"></iframe>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="checkersModal" tabindex="-1" aria-labelledby="checkersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 800px; width: 100%; max-height: 800px; height: 100%;">
        <div class="modal-content" style="height: 100%;">
            <div class="modal-body" style="height: 100%;">
                <iframe src="https://playpager.com/embed/checkers/index.html" scrolling="no" style="width: 100%; height: 100%; border: none;"></iframe>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="monopolyModal" tabindex="-1" aria-labelledby="monopolyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 800px; width: 100%; max-height: 800px; height: 100%;">
        <div class="modal-content" style="height: 100%;">
            <div class="modal-body" style="height: 100%;">
                <iframe src="https://www.gameslol.net/monopoly-1122.html" scrolling="no" style="width: 100%; height: 100%; border: none;"></iframe>
            </div>
        </div>
    </div>
</div>

{% endblock %}
