{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h1 class="mb-4">Create new Category</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form, {'attr': {'class': 'p-3 bg-light rounded-3'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.name, 'Category Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <button type="submit" class="btn btn-primary mb-3">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="d-flex justify-content-center mt-3">
            <a href="{{ path('category_index') }}" class="btn btn-secondary">Back to list</a>
        </div>
    </div>
{% endblock %}
