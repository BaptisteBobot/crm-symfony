{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h1 class="mb-4">Categories</h1>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for category in categories %}
                <div class="col">
                    <div class="card h-100 shadow">
                        <div class="card-header bg-primary text-white">
                            <i class="fas fa-tag"></i> {{ category.name }}
                        </div>
                        <div class="card-body">
                            <p class="card-text">Category ID: {{ category.id }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-outline-primary btn-sm me-2">Show</a>
                            <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-outline-secondary btn-sm">Edit</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">No categories found</p>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-3">
            <a href="{{ path('category_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>
{% endblock %}
