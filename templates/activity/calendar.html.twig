
{% extends 'base.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}
    <h1>Calendrier</h1>
    <div id="calendar"></div>
{% endblock %}

{% block javascripts %}
  <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.6/index.global.min.js'></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendarEvents = {{ calendarEvents|json_encode|raw }};
            var calendar = new FullCalendar.Calendar(calendarEl, {
                locale: 'fr', // Ajoutez cette ligne pour utiliser la localisation fran√ßaise
                initialView: 'dayGridMonth',
                events: calendarEvents,
                selectable: true,
                select: function(info) {
                    window.location.href = "{{ path('activity_create') }}" + '?startDate=' + info.startStr + '&endDate=' + info.endStr;
                }
            });
            calendar.render();
        });
    </script>
{% endblock %}
