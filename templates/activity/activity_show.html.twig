{% if app.user %}
    {% set isRegistered = false %}
    {% for registration in activity.activityRegistrations %}
        {% if registration.member.id == app.user.id %}
            {% set isRegistered = true %}
            {% break %}
        {% endif %}
    {% endfor %}

    {% if isRegistered %}
        <a href="{{ path('activity_member_unregister', {'id': activity.id}) }}" class="btn btn-danger">Se d√©sinscrire</a>
    {% else %}
        <a href="{{ path('activity_member_register', {'id': activity.id}) }}" class="btn btn-success">S'inscrire</a>
    {% endif %}
{% endif %}
