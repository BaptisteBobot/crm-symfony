{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.firstName }}{% endblock %}

{% block content %}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<style>
    .profile-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .profile-card {
        background: white;
        box-shadow: 0px 10px 10px -10px rgba(0, 0, 0, 0.15);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
        width: 90%;
        max-width: 500px;
    }

    .profile-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 20px 20px -10px rgba(0, 0, 0, 0.15);
    }

    .profile-card .card-body {
        padding: 2rem;
    }

    .profile-card h1.card-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .profile-card .card-text {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .profile-card .btn-primary {
        background-color: #6C5DD3;
        border: none;
        color: #fff;
    }

    .profile-card .btn-primary:hover {
        background-color: #5D48BE;
    }

    .profile-card .profile-image {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 150px;
        background-color: #6C5DD3;
    }

    .profile-card .profile-image img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 5px solid #fff;
    }
</style>

<div class="profile-container">
    <div class="card profile-card">
        <div class="profile-image">
            <img src="https://via.placeholder.com/150" alt="Profile Picture">
        </div>
        <div class="card-body">
            <h1 class="card-title text-center">{{ user.firstName }} {{ user.lastName }}</h1>
            <p class="card-text"><i class="fas fa-envelope"></i> Email: {{ user.email }}</p>
            <p class="card-text"><i class="fas fa-phone"></i> Phone: {{ user.phone }}</p>
            <div class="d-flex justify-content-center">
                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary mt-3">Modifier le profil</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
